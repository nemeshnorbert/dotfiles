{
    // BREADCRUMBDS
    "breadcrumbs.enabled": true,

    // C++
    "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
    "C_Cpp.updateChannel": "Insiders",
    "[cpp]": {
        "editor.tabSize": 2
    },

    // DATE & TIME
    "dateTime.showAMPM": true,
    "dateTime.showMonth": true,
    "dateTime.showDayOfWeek": true,
    "dateTime.showDayOfMonth": true,
    "dateTime.showSeconds": true,
    "dateTime.padDays": true,

    // DEBUG
    "debug.inlineValues": true,

    // DIFF EDITOR
    "diffEditor.ignoreTrimWhitespace": false,

    // EDITOR
    "editor.tabSize": 4,
    "editor.occurrencesHighlight": false,
    "editor.renderIndentGuides": false,
    "editor.detectIndentation": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "blink",
    "editor.folding": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "editor.rulers": [
        100
    ],
    "editor.renderLineHighlight": "gutter",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.suggest.preview": true,
    "editor.suggest.showStatusBar": true,
    "editor.minimap.showSlider": "always",
    "editor.autoSurround": "languageDefined",
    "editor.stickyTabStops": true,

    // EXTENSIONS
    "extensions.autoCheckUpdates": true,

    // EXPLORER
    "explorer.confirmDelete": false,
    "explorer.sortOrder": "type",
    "explorer.confirmDragAndDrop": false,

    // FILES
    "files.exclude": {
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.vscode": true,
        "**/bazel*": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/bazel*": true,
    },
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // GITLENS
    "gitlens.currentLine.scrollable": false,

    // HTML
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },

    // JUPYTER
	"jupyter.themeMatplotlibPlots": true,
    "jupyter.askForKernelRestart": false,
    "notebook.globalToolbar": false,

    // MARKDOWN
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "editor.minimap.enabled": true
    },
    "editor.unfoldOnClickAfterEndOfLine": true,

    // PYTHON
    "python.analysis.logLevel": "Information",
    "python.linting.enabled": true,
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
        "editor.defaultFormatter": "ms-python.python",
    },

    // REMOTE DEVELOPMENT
    "remote.containers.defaultExtensions": [
        "aaron-bond.better-comments",
        "akamud.vscode-theme-onelight",
        "BazelBuild.vscode-bazel",
        "CoenraadS.bracket-pair-colorizer",
        "eamodio.gitlens",
        "file-icons.file-icons",
        "KevinRose.vsc-python-indent",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-vscode.cpptools",
        "mutantdino.resourcemonitor",
        "njpwerner.autodocstring",
        "rid9.datetime",
        "TabNine.tabnine-vscode",
        "vscode-icons-team.vscode-icons",
        "vscodevim.vim",
        "zhuangtongfa.material-theme",
    ],

    // SEARCH
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/bazel*": true
    },

    // TELEMETRY
    "telemetry.enableTelemetry": false,

    // TERMINAL
    "terminal.integrated.defaultProfile.linux": "Bash",
    "terminal.integrated.profiles.linux": {
        "Bash": {
            "path": "/bin/bash"
        }
    },
    "terminal.integrated.scrollback": 10000,

    // VIM
    "vim.searchHighlightColor": "#344a74",
    "vim.hlsearch": true,
    "vim.whichwrap": "h,l,<,>,[,]",
    "vim.debug.loggingLevelForConsole": "debug",
    "vim.handleKeys": {
        "<C-d>": true, // if false enables multi cursor selection in Insert mode, then use PageDown instead
        "<C-u>": true, // if false enables cursor undo action in Insert mode, then use PageDown instead
        "<C-b>": false // if  false enables explorer toggling, use PageUp instead
    },

    // VS ICONS
    "vsicons.dontShowNewVersionMessage": true,

    // WINDOW
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "compact",
    "window.zoomLevel": -1,

    // WORKBENCH
    "workbench.colorTheme": "One Dark Pro",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.panel.defaultLocation": "right",
    "workbench.settings.editor": "json",
    "workbench.tree.indent": 16,
    "workbench.iconTheme": "vscode-icons",
    "workbench.activityBar.visible": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },

    // ZEN MODE
    "zenMode.restore": true,
    "tabnine.experimentalAutoImports": true
}
