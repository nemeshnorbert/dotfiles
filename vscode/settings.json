{
    // BREADCRUMBDS
    "breadcrumbs.enabled": true,

    // C++
    "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
    "C_Cpp.updateChannel": "Insiders",
    "[cpp]": {
        "editor.tabSize": 2
    },

    // HTML
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },

    // DATE & TIME
    "dateTime.showAMPM": true,
    "dateTime.showMonth": true,
    "dateTime.showDayOfWeek": true,
    "dateTime.showDayOfMonth": true,
    "dateTime.showSeconds": true,
    "dateTime.padDays": true,

    // DOCKER
    // "docker.host": "localhost:8899",

    // DIFF EDITOR
    "diffEditor.ignoreTrimWhitespace": false,

    // EDITOR
    "editor.occurrencesHighlight": false,
    "editor.renderIndentGuides": false,
    "editor.detectIndentation": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "blink",
    "editor.folding": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "editor.rulers": [
        100
    ],
    "editor.renderLineHighlight": "gutter",

    // EXTENSIONS
    "extensions.autoCheckUpdates": true,

    // EXPLORER
    "explorer.confirmDelete": false,
    "explorer.sortOrder": "type",
    "explorer.confirmDragAndDrop": false,

    // FILES
    "files.exclude": {
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.vscode": true,
        "**/bazel*": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/bazel*": true,
    },
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // GIT
    "git.enabled": false,

    // GITLENS
    "gitlens.currentLine.scrollable": false,

    // MARKDOWN
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "editor.minimap.enabled": true
    },

    // PYTHON
    "python.analysis.logLevel": "Information",
    "python.linting.pylintEnabled": false,
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true
    },
    // "python.jediEnabled": true,

    // VIM
    "vim.searchHighlightColor": "#344a74",
    "vim.hlsearch": true,
    "vim.whichwrap": "h,l,<,>,[,]",
    "vim.debug.loggingLevelForConsole": "debug",
    "vim.handleKeys": {
        "<C-d>": false, // Use PgDown instead, enable multi cursor selection in Insert mode
        "<C-b>": false // Use PgUp instead, this enables explorer toggling
    },

    // VS ICONS
    "vsicons.dontShowNewVersionMessage": true,
    "window.titleBarStyle": "custom",

    // WORKBENCH
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.panel.defaultLocation": "right",
    "workbench.settings.editor": "json",
    "workbench.tree.indent": 16,
    "workbench.iconTheme": "vscode-icons",
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "One Dark Pro",

    // REMOTE DEVELOPMENT
    "remote.containers.defaultExtensions": [
        "aaron-bond.better-comments",
        "akamud.vscode-theme-onelight",
        "BazelBuild.vscode-bazel",
        "CoenraadS.bracket-pair-colorizer",
        "eamodio.gitlens",
        "file-icons.file-icons",
        "KevinRose.vsc-python-indent",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-vscode.cpptools",
        "mutantdino.resourcemonitor",
        "njpwerner.autodocstring",
        "rid9.datetime",
        "vscode-icons-team.vscode-icons",
        "vscodevim.vim",
        "zhuangtongfa.material-theme",
    ],

    // SEARCH
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/bazel*": true
    },

    // TELEMETRY
    "telemetry.enableTelemetry": false,

    // TERMINAL
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.rendererType": "canvas",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
}
