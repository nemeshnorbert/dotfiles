// This is an example file containing settings used when attaching to a running container
// For creating such files see https://code.visualstudio.com/docs/remote/attach-container
// To attach to a running container
// 1. Open VS code
// 2. Remote-Containers: Attach to Running Containers
// 3. Choose container
{
    // An array of extension IDs that specify the extensions to
    // install inside the container when you first attach to it.
    "extensions": [
        "BazelBuild.vscode-bazel",
        "eamodio.gitlens",
        "KevinRose.vsc-python-indent",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode.cpptools",
        "mutantdino.resourcemonitor",
        "njpwerner.autodocstring",
        "rid9.datetime"
    ],

    // Default path to open when attaching to a new container.
    "workspaceFolder": "/home/norbert/dev",

    // Any *default* container specific VS Code settings
    // "settings": {
    //     "terminal.integrated.shell.linux": "/bin/bash"
    // },

    // An array port numbers to forward
    // "forwardPorts": [8000],

    // Container user VS Code should use when connecting
    // "remoteUser": "vscode",

    // Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "uname -a"
}
